#
# Copy this file to `.env` and adjust the values to match your environment.
# These variables are consumed by both docker-compose and the React build.
#

# TURN server credentials and configuration
TURN_USERNAME=webrtc-user
TURN_PASSWORD=change-me
TURN_REALM=webrtc-chat.local
TURN_PORT=3478
TURN_TLS_PORT=5349
# Public IP address of the host that exposes the TURN server. Leave empty for local testing.
TURN_EXTERNAL_IP=
# Optional DDNS hostname to auto-resolve before starting Docker Compose (used by scripts/start-with-turn.sh)
TURN_DDNS_HOST=hostname.ddns.net

# Frontend ICE settings (consumed at build/start time)
REACT_APP_STUN_URLS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302,stun:stun2.l.google.com:19302
# Ensure to change the following localhost domains
REACT_APP_TURN_URLS=turn:localhost:3478?transport=udp,turn:localhost:3478?transport=tcp
REACT_APP_TURN_USERNAME=webrtc-user
REACT_APP_TURN_PASSWORD=change-me
REACT_APP_SIGNALING_URL=http://localhost:3001
